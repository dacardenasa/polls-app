doctype html
html
  head
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(charset='utf-8')
    title= "Polls App"
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    block scripts
      script(src='/js/jquery.min.js')
      script(src='/js/popper.js')
      script(src='/js/bootstrap.min.js')
  body
    block header
      nav.navbar.navbar-expand-md.navbar-dark.bg-dark
        a.navbar-brand(href='/') Polls App
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarCollapse' aria-controls='navbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarCollapse.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href='/polls')
                | Polls 
                span.sr-only (current)
            if user
              li.nav-item
                a.nav-link(href='/logout') Logout
              li.nav-item
                a.nav-link(href='/#' class="disabled")= `Welcome ${user.name}`
            else
              li.nav-item
                a.nav-link(href='/login') Login
              li.nav-item
                a.nav-link(href='/signup') Register
    block content

    block footer
    footer
      div(align='center' style="padding-top: 5px;")
        | Desarrollado por 
        a(href='https://github.com/dacardenasa' target='_blank') Diego Cardenas &copy;
    block scripts
      script(src="/js/share-buttons.js")